{
  "include": ["src/*", "rollup.config.js"],
  "compilerOptions": {
    "outDir": "dist/types",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noErrorTruncation": true,
    "allowSyntheticDefaultImports": true
  }
}
